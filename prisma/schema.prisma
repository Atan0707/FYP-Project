generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  fullName  String
  ic        String   @unique
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Family relationships
  familyMembers    FamilyMember[] @relation("UserFamilyMembers")
  addedByMembers   FamilyMember[] @relation("AddedByUser")
}

model FamilyMember {
  id          String   @id @default(cuid())
  userId      String   // The user who is the family member
  addedById   String   // The user who added this family member
  relationship String  // e.g., "spouse", "child", "parent", "sibling"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isRegistered Boolean @default(false)
  pendingIc    String? // Store IC for unregistered members
  
  user        User     @relation("UserFamilyMembers", fields: [userId], references: [id])
  addedBy     User     @relation("AddedByUser", fields: [addedById], references: [id])

  @@unique([userId, addedById])
}

model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


